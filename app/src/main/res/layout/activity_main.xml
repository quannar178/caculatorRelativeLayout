<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#AFACAC">

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/menu2_icon" />

    <TextView
        android:id="@+id/tvStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Standard"
        android:textSize="35sp"
        android:layout_toRightOf="@id/btnMenu"/>

    <ImageButton
        android:id="@+id/btnRecovery"
        android:layout_width="50dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:layout_height="50dp"
        android:src="@drawable/recovery_icon"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/btnMinimize"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/btnRecovery"
        android:scaleType="centerCrop"
        android:src="@drawable/minimize_icon" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="25sp"
        android:gravity="right"
        android:fontFamily="@font/digital"
        android:background="#AFACAC"
        android:layout_below="@id/btnMenu" />


    <TextView
        android:id="@+id/tvShow"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:hint="0"
        android:gravity="right"
        android:textSize="70sp"
        android:padding="0sp"
        android:fontFamily="@font/digital"
        android:background="#AFACAC"
        android:layout_below="@id/tvResult"/>

    <Button
        android:enabled="false"
        android:layout_marginLeft="4dp"
        android:id="@+id/btnMC"
        android:layout_width="67dp"
        android:layout_height="72dp"
        android:layout_below="@id/tvShow"
        android:text="MC"
        android:fontFamily="@font/digital"
        android:background="#AFACAC"
        android:textSize="25sp"/>

    <Button
        android:enabled="false"
        android:id="@+id/btnMR"
        android:layout_width="67dp"
        android:layout_height="72dp"
        android:layout_below="@id/tvShow"
        android:text="MR"
        android:layout_toRightOf="@id/btnMC"
        android:fontFamily="@font/digital"
        android:background="#AFACAC"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnMPlus"
        android:layout_width="67dp"
        android:layout_height="72dp"
        android:layout_below="@id/tvShow"
        android:text="M+"
        android:layout_toRightOf="@id/btnMR"
        android:fontFamily="@font/digital"
        android:background="#AFACAC"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnMMinus"
        android:layout_width="67dp"
        android:layout_height="72dp"
        android:layout_below="@id/tvShow"
        android:text="M-"
        android:layout_toRightOf="@id/btnMPlus"
        android:fontFamily="@font/digital"
        android:background="#AFACAC"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnMS"
        android:layout_width="67dp"
        android:layout_height="72dp"
        android:layout_below="@id/tvShow"
        android:text="MS"
        android:fontFamily="@font/digital"
        android:background="#AFACAC"
        android:layout_toRightOf="@id/btnMMinus"
        android:textSize="25sp" />

    <Button
        android:enabled="false"
        android:id="@+id/btnM"
        android:layout_width="67dp"
        android:layout_height="72dp"
        android:layout_below="@id/tvShow"
        android:text="M"
        android:layout_toRightOf="@id/btnMS"
        android:fontFamily="@font/digital"
        android:background="#AFACAC"
        android:textSize="25sp" />

    <Button
        android:layout_marginLeft="2dp"
        android:id="@+id/btnPercent"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:text="%"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:layout_below="@id/btnMC"/>

    <Button
        android:id="@+id/btnCE"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnMC"
        android:text="CE"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:layout_toRightOf="@id/btnPercent"/>

    <Button
        android:id="@+id/btnC"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnMC"
        android:layout_toRightOf="@id/btnCE"
        android:text="C"
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:textSize="35sp"/>

    <ImageButton
        android:id="@+id/btnDel"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnMC"
        android:layout_toRightOf="@id/btnC"
        android:scaleType="fitCenter"
        android:src="@drawable/backspace2"/>

    <Button
        android:layout_marginLeft="2dp"
        android:id="@+id/btnOneDevX"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:text="1/x"
        android:textAllCaps="false"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:layout_below="@id/btnPercent"/>

    <Button
        android:id="@+id/btnXSquare"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnPercent"
        android:text="x^2"
        android:textAllCaps="false"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:layout_toRightOf="@id/btnPercent"/>

    <Button
        android:id="@+id/btnXSqrt"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnPercent"
        android:layout_toRightOf="@id/btnCE"
        android:text="Sqrt"
        android:textAllCaps="false"
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:textSize="35sp"/>

    <Button
        android:id="@+id/btnDevide"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnPercent"
        android:layout_toRightOf="@id/btnC"
        android:text="/"
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:textSize="35sp"/>

    <Button
        android:layout_marginLeft="2dp"
        android:id="@+id/btnNum7"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:text="7"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:layout_below="@id/btnOneDevX"/>

    <Button
        android:id="@+id/btnNum8"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnOneDevX"
        android:text="8"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:layout_toRightOf="@id/btnPercent"/>

    <Button
        android:id="@+id/btnNum9"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnOneDevX"
        android:layout_toRightOf="@id/btnCE"
        android:text="9"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:textSize="35sp"/>

    <Button
        android:id="@+id/btnMultiple"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnOneDevX"
        android:layout_toRightOf="@id/btnC"
        android:text="*"
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:textSize="35sp"/>

    <Button
        android:layout_marginLeft="2dp"
        android:id="@+id/btnNum4"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:text="4"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:layout_below="@id/btnNum7"/>

    <Button
        android:id="@+id/btnNum5"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnNum7"
        android:text="5"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:layout_toRightOf="@id/btnPercent"/>

    <Button
        android:id="@+id/btnNum6"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnNum7"
        android:layout_toRightOf="@id/btnCE"
        android:text="6"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:textSize="35sp"/>

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnNum7"
        android:layout_toRightOf="@id/btnC"
        android:text="-"
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:textSize="35sp"/>

    <Button
        android:layout_marginLeft="2dp"
        android:id="@+id/btnNum1"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:text="1"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:textSize="35sp"
        android:layout_below="@id/btnNum4"/>

    <Button
        android:id="@+id/btnNum2"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnNum4"
        android:text="2"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:layout_toRightOf="@id/btnPercent"/>

    <Button
        android:id="@+id/btnNum3"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnNum4"
        android:layout_toRightOf="@id/btnCE"
        android:text="3"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:textSize="35sp"/>

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnNum4"
        android:layout_toRightOf="@id/btnC"
        android:text="+"
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:textSize="35sp"/>

    <Button
        android:layout_marginLeft="2dp"
        android:id="@+id/btnPlusMinus"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:text="+/-"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:layout_below="@id/btnNum1"/>

    <Button
        android:id="@+id/btnNum0"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnNum1"
        android:text="0"
        android:textSize="35sp"
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:layout_toRightOf="@id/btnPercent"/>

    <Button
        android:id="@+id/btnDot"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnNum1"
        android:layout_toRightOf="@id/btnCE"
        android:text="."
        android:fontFamily="@font/digital"
        android:background="#EDECEC"
        android:textSize="35sp"/>

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:layout_below="@id/btnNum1"
        android:layout_toRightOf="@id/btnC"
        android:text="="
        android:fontFamily="@font/digital"
        android:background="#CFCCCC"
        android:textSize="40sp"/>


</RelativeLayout>